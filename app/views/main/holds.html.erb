<% if @holds == "login" %>
    <h2 class="col-xs-12 col-md-6 col-md-offset-3 padbot" style="text-align:center;">Please log in to access your account</h2>
    <div class="row">
        <%= render 'login_page' %>
    </div>
<% else %>
    <div class="row">
        <div id="account-menu" class="col-xs-12 col-sm-3">
            <%= render 'account_menu' %>
        </div>
        <div id="hold_list" class="col-xs-12 col-sm-9">
            <%= render 'hold_list', :holds => @holds %>
        </div>
    </div>
<% end %>
