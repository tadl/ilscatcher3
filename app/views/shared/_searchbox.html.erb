<!-- app/views/shared/_searchbox.html.erb -->

<%= bootstrap_form_tag url: 'search', :html => { :method => 'get', :role => 'search', :class => 'navbar-form navbar-left' } do |f| %>
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-btn">
                <select class="form-control selectpicker" id="_format" name="format">
                    <option value="all">All Formats</option>
                    <option value="g">Movies</option>
                    <option value="j">Music</option>
                </select>
            </div>
            <div class="input-group-text">
                <input class="form-control" id="query" name="query" placeholder="Search" type="search">
            </div>
            <div class="input-group-btn">
                <button type="submit" name="commit" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        </div>
    </div>
<% end %>
