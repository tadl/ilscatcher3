<% if @user.error %>
    <h2>You must be logged in to view fines</h2>
    <script>logout();location.assign(mock_index_path);</script>
<% else %>
    <div class="row">
        <div id="account-menu" class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
            <%= render 'account_menu' %>
        </div>
        <div id="fines-summary" class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
            <% if @fines.length > 0 %>
                <%= render 'fines_list', fines: @fines %>
            <% else %>
                <h2>No fines on your account. Hooray!</h2>
            <% end %>
        </div>
    </div>
<% end %>
