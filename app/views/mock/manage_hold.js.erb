<% target_div = '#hold-record-' + @hold_id %>
<% if @task == 'cancel' %>
	$('<%= escape_javascript(target_div)%>').remove();
<% else %>
	<% hold = @holds.find {|h| h.hold_id == @hold_id} %>
	$('<%= escape_javascript(target_div)%>').html("<%= escape_javascript(render partial: 'hold', :locals => {:hold => hold}) %>");
<% end %>
sessionStorage.setItem('holds', "<%= escape_javascript(@user.holds) %>");
sessionStorage.setItem('holds_ready', "<%= escape_javascript(@user.holds_ready) %>");
update_login();
hold_management_binds();
