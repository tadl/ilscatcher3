<div class="row">
    <%= render 'full_search_box', search: @search %>
</div>
<div class="row">
    <div id="facets" class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
        <% if @search.query && @search.query != '' %>
            <div id="melcat_link">
                <a href='<%= @search.melcat_link %>'>
                    <img src="<%= asset_path('button-search-melcat.png') %>" style="width: 100%">
                </a>
            </div>
        <% end %>
        <% @facets.each do |facet| %>
            <%= render 'facets', facet: facet %>
        <% end %>
    </div>
    <div id="results" class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
        <% if @search.list_active == "active" %>
            <%= render 'search_list', items: @items %>
        <% else %>
            <%= render 'search_grid', items: @items %>
        <% end %>
    </div>    
</div>

<%= render 'more_results_link' %>

<%= render 'hidden_hold_login' %>

<script>
bind_more_results();
</script>

<script>
document.addEventListener('page:change', function() {
    $('#results').addClass('animated fadeInUp');
});
document.addEventListener('page:fetch', function() {
    $('results').addClass('animated fadeOutDown');
})

$(document).on("submit", "form[data-turboform]", function(e) {
    Turbolinks.visit(this.action+(this.action.indexOf('?') == -1 ? '?' : '&')+$(this).serialize());
    return false;
});
</script>

<script>
holdbutton_click();
</script>
