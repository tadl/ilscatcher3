<div class="panel <%= item.grid_available_panel %>">
    <div class="panel-heading">
        <%= link_to 'details.js', data:{params: item.create_params}, :method=> :post, :remote => true do %>
            <span class="glyphicon <%= format_icon(item.format_type, @format_icons) %>" title="<%= item.format_type %>"></span> <%= item.title %>
        <% end %>
    </div><!-- /.panel-heading -->
    <div class="panel-body">
        <%= link_to 'details.js', data:{params: item.create_params}, :method=> :post, :remote => true do %>
            <img src='https://catalog.tadl.org/opac/extras/ac/jacket/large/r/<%= item.id %>' class="grid-item" 
                onerror="this.src='<%= asset_path("logo-clock-only.png") %>?id=<%= item.id %>'" />
        <% if item.loc_copies_available > 0 %>
            <div class="panel-overlay">
                <%= item.grid_available_text.html_safe %>
            </div>
        <% end %>
        <% end %>
    </div><!-- /.panel-body -->
</div><!-- /.panel -->
