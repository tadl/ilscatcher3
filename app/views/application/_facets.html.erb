<% unless facet.subfacets.count == 0%>
<% if full_size == "true" %>
<div>
<% else %>
<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
<% end %>    
    <div class="list-group">
        <h4 class="list-group-item list-group-item-info active">Filter By <%= facet.type %></h4>
        <% facet.subfacets.each do |sub| %>
            <% unless @search.genre_lock == sub %>
                <% if @search.active_facet(facet.type_raw, sub) %>
                    <a class="list-group-item" href="<%= @search.search_path_minus_selected_facet(facet.type_raw, sub)%>"><%= sub %> <span class="closebutton glyphicon glyphicon-remove"></span></a>
                <% else %>
                    <a class="list-group-item" href="<%= @search.search_path_with_new_facet(facet.type_raw, sub)%>"><%= sub %></a>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>
<% end %>
