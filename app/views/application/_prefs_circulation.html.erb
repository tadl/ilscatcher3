<div class="panel panel-primary" id="panel-circulation-prefs">
    <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left" style="padding-top:3px;">Circulation Prefs</h3>
        <div class="btn-group pull-right">
            <%= link_to 'preferences.js', :method => 'POST', :remote => true, :class => 'btn btn-default btn-xs edit-circulation-prefs' do %>Edit<% end %>
        </div>
    </div>
    <div class="panel-body table-responsive">
        <table class="table table-striped">
            <thead>
                <tr><th>Setting</th><th>Current Value</th></tr>
            </thead>
            <tbody>
                <tr><td>Pickup Library</td><td id="pickup_library-value"><%= location(@preferences['pickup_library'], @location_options) %></td></tr>
                <tr><td>Keep Circulation History</td><td id="keep_circ_history-value"><%= @preferences['keep_circ_history'] %></td></tr>
                <tr><td>Keep Hold History</td><td id="keep_hold_history-value"><%= @preferences['keep_hold_history'] %></td></tr>
                <tr><td>Default Search Location</td><td id="default_search-value"><%= location(@preferences['default_search'], @location_options) %></td></tr>
            </tbody>
        </table>
    </div>
</div>
