<div class="list-group">
    <div class="list-group-item active"><h4>My Account</h4></div>
    <%= link_to main_preferences_path, :class => "navi list-group-item #{'active' if request.path == main_preferences_path}" do %>Account Preferences<% end %>
    <%= link_to main_checkouts_path, :class => "navi list-group-item #{'active' if request.path == main_checkouts_path}" do %>Checked Out Items<% end %>
    <%= link_to main_holds_path, :class => "navi list-group-item #{'active' if request.path == main_holds_path}" do %>Items on Hold<% end %>
    <%= link_to main_lists_path, :class => "navi list-group-item #{'active' if request.path == main_lists_path}" do %>Lists<% end %>
    <%= link_to main_fines_path, :class => "navi list-group-item #{'active' if request.path == main_fines_path}" do %>Current Fines<% end %>
    <%= link_to main_payments_path, :class => "navi list-group-item #{'active' if request.path == main_payments_path}" do %>Past Payments<% end %>
    <%= link_to main_checkout_history_path, :class => "navi list-group-item #{'active' if request.path == main_checkout_history_path}" do %>Checkout History<% end %>
</div>
<% if (request.path == main_preferences_path) %>
    <div class="clearfix padtop"></div>
    <div class="panel panel-primary">
        <div class="panel-heading">Your MeLCat ID</div>
        <div class="panel-body">
            <%= @preferences['melcat_id'] %>
        </div>
    </div>
<% end %>
<div class="clearfix padtop"></div>
<% if (request.path == main_holds_path && @holds.count > 0) || (request.path == main_checkouts_path && @checkouts.count > 0) %>
    <div class="btn-group">
        <button type="button" class="btn btn-default" id="select-all">Select All Items</button>
        <button type="button" class="btn btn-default" id="select-none">Clear Selection</button>
    </div>
    <div class="btn-group padtop">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Bulk Actions <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <% if request.path == main_checkouts_path %>
                <li><a href="#" id="checkout-bulk-renew">Renew</a></li>
            <% elsif request.path == main_holds_path %>
                <li>
                    <a href="#" id="hold-bulk-suspend">Suspend</a>
                </li>
                <li><a href="#" id="hold-bulk-activate">Activate</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#" id="hold-bulk-cancel">Cancel</a></li>
            <% end %>
        </ul>
    </div>
<% end %>
<% if (request.path == main_fines_path && @fines.count > 0 && Settings.has_payments == "true") %>
    <div class="btn-group">
        <form method="POST" action="<%= Settings.payment_link %>">
            <input type="hidden" name="ses" value="<%= @user.token %>">
            <input type="submit" class="btn btn-default form-control" value="Pay fines">
        </form>
    </div>
<% end %>
