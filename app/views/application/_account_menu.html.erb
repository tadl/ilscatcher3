<div class="list-group">
    <div class="list-group-item active"><h4>My Account</h4></div>
    <%= link_to mock_preferences_path, :class => "list-group-item #{'active' if request.path == mock_preferences_path}" do %>Account Preferences<% end %>
    <%= link_to mock_checkouts_path, :class => "list-group-item #{'active' if request.path == mock_checkouts_path}" do %>Checked Out Items<% end %>
    <%= link_to mock_holds_path, :class => "list-group-item #{'active' if request.path == mock_holds_path}" do %>Holds<% end %>
    <%= link_to mock_fines_path, :class => "list-group-item #{'active' if request.path == mock_fines_path}" do %>Fines<% end %>
    <%= link_to mock_payments_path, :class => "list-group-item #{'active' if request.path == mock_payments_path}" do %>Payments<% end %>
</div>
<div class="clearfix padtop"></div>
<% if (request.path == mock_holds_path && @holds.count > 0) || (request.path == mock_checkouts_path && @checkouts.count > 0) %>
    <div class="btn-group">
        <button type="button" class="btn btn-default" id="select-all">Select All Items</button>
        <button type="button" class="btn btn-default" id="select-none">Clear Selection</button>
    </div>
    <div class="btn-group padtop">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Bulk Actions <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <% if request.path == mock_checkouts_path %>
                <li><a href="#" id="checkout-bulk-renew">Renew</a></li>
            <% elsif request.path == mock_holds_path %>
                <li>
                    <a href="#" id="hold-bulk-suspend">Suspend</a>
                </li>
                <li><a href="#" id="hold-bulk-activate">Activate</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#" id="hold-bulk-cancel">Cancel</a></li>
            <% end %>
        </ul>
    </div>
<% end %>
<% if (request.path == mock_fines_path && @fines.count > 0) %>
    <div class="btn-group">
        <form method="POST" action="https://www.tadl.org/pay/pay.cgi">
            <input type="hidden" name="ses" value="<%= @user.token %>">
            <input type="submit" class="btn btn-default form-control" value="Pay fines">
        </form>
    </div>
<% end %>
