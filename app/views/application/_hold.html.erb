<h2>Title: <%= hold.title %></h2>
Author: <%= hold.author %> </br>
Record ID: <%= hold.record_id %> </br>
Hold ID (this is what we need to manage holds):<%= hold.hold_id %> </br>
Status: <%= hold.hold_status %> </br>
You are number <%= hold.queue_state[0] %> out of <%= hold.queue_state[1] %> </br>
Pickup Location: <%= hold.pickup_location %> </br>

<% if hold.hold_status == 'Active' %>
	<%= link_to 'manage_hold.js', data:{params: hold.create_params('suspend')}, remote: true do %>
		Suspend
	<% end %>
<% else %>
	<%= link_to 'manage_hold.js', data:{params: hold.create_params('activate')}, remote: true do %>
		Activate
	<% end %>
<% end %>
</br>
	<%= link_to 'manage_hold.js', data:{params: hold.create_params('cancel')}, remote: true do %>
		Cancel
	<% end %>
<hr>