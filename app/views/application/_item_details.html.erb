<div class="row">
	<div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
		<img class="item_details_cover" src="<%= Settings.cover_path_lg %><%= item.id %>"
            onerror="this.src='<%= asset_path(Settings.logo) %>?id=<%= item.id %>';this.onerror='';">
	</div>	    	
	<div class="col-xs-12 col-sm-8 col-md-9 col-lg-9">
        <div class="row">
            <div class="col-xs-12">
                <h3><span class="glyphicon <%= format_icon(item.format_type, @format_icons) %>" title="<%= item.format_type %>"></span><span class="sr-only"><%= item.format_type %></span> <%= item.title %></h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-lg-12">
                <% if !item.author.nil? %>
                    <p>
                        <a href="<%= related_search_link(item.author, item, 'author') %>" data-no-turbolink="true"> <%= item.author %> </a>
                    </p>
                <% end %>    
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-8 col-lg-9">
                <div id="goodreads_review">
                </div>
                <% if !item.abstract.empty? %>
                    <dl>
                        <dt>Summary</dt>
                        <% if item.abstract.length > 250 %>
                            <dd>
                                <%= truncate(item.abstract, length: 250) %>
                                 <%= link_to 'Read more', '', class: "read-more-#{item.id}-abstract" %>
                                <script>
                                    $('.read-more-<%= item.id %>-abstract').on('click', function(e) {
                                        e.preventDefault()
                                        $(this).parent().html('<%= escape_javascript item.abstract %>')
                                    })
                                </script>
                            </dd>
                        <% else %>
                            <dd><%= item.abstract %></dd>
                        <% end %>
                    </dl>
                <% end %>
                <div id="trailer_<%= item.id %>">
                </div>
                <% if !item.contents.empty? %>
                    <dl>
                        <dt>Contents</dt>
                        <% if item.contents.length > 250 %>
                            <dd>
                                <%= truncate(item.contents, length: 250) %>
                                 <%= link_to 'Read more', '', class: "read-more-#{item.id}-contents" %>
                                <script>
                                    $('.read-more-<%= item.id %>-contents').on('click', function(e) {
                                        e.preventDefault()
                                        $(this).parent().html('<%= escape_javascript item.contents %>')
                                    })
                                </script>
                            </dd>
                        <% else %>
                            <dd><%= item.contents %></dd>
                        <% end %>
                    </dl>
                <% end %>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-3">
                <span class="pull-right">
                    <% if item.electronic.to_s != 'true'  %>
                        <div class='hold-status-<%= item.id %>'>
                        </div>
                        <div class="holdlogin-<%= item.id %>" style="display: none">
                            <div>
                                <div class="alert alert-info">
                                    <i class="glyphicon glyphicon-user"></i> Log in to place hold
                                </div>
                            </div>
                            <label for="holdloginuser">Username or Library Card</label>
                            <input type="text" class="holdloginuser-<%= item.id %> form-control" name="holdloginuser" />
                            <label for="holdloginpass" class="padtop">Password</label>
                            <input type="password" class="holdloginpass-<%= item.id %> form-control" name="holdloginpass" />
                            <div class="padtop">
                                <button type="button" class="btn btn-success loginsubmit" onclick="login(<%= item.id %>)">
                                    Log in and Place Hold
                                </button>
                            </div>
                            <div class="padtop">
                                <button type="button" class="btn btn-danger logincancel" onclick="login_cancel(<%= item.id %>)">
                                    Cancel
                                </button>
                            </div>
                        </div>
                        <p>
                            <button class="btn btn-success holdbtn hold-<%= item.id %>" onclick="place_hold(<%= item.id %>)">
                                Place hold
                            </button>
                        </p>
                    <% else %>
                        <p><a class="btn btn-success" href="<%= item.eresource %>">View Online</a></p>
                    <% end %>
                    <% if @default_list %>
                        <div class="btn-group" style="min-width:120px;">
                            <button type="button" class="btn btn-primary" id="add-list-<%= item.id %>" onclick="add_to_list(<%= @default_list %>, <%= item.id %>)">Add to List</button>
                            <button type="button" class="btn btn-primary dropdown-toggle" id="button-<%= item.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <% @lists.each do |l| %>
                                    <li><a class="clicky" onclick="add_to_list(<%= l['list_id'] %>,<%= item.id %>)"><%= truncate(l['title'], length: 30, separator: ' ') %><% if l['default'] == true %> <span class="sr-only">Default list</span><i class="glyphicon glyphicon-ok-sign text-success"></i><% end %></a></li>
                                <% end %>
                            </ul>
                        </div>
                    <% elsif @lists && !@lists.empty? %>
                        <div class="btn-group" style="min-width:120px;">
                            <button type="button" class="btn btn-primary dropdown-toggle" id="add-list-<%= item.id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Add to List
                            </button>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <% @lists.each do |l| %>
                                    <li><a class="clicky" onclick="add_to_list(<%= l['list_id'] %>,<%= item.id %>)"><%= truncate(l['title'], length: 30, separator: ' ') %><% if l['default'] == true %> <span class="sr-only">Default list</span><i class="glyphicon glyphicon-ok-sign text-success"></i><% end %></a></li>
                                <% end %>
                            </ul>
                        </div>
                    <% end %>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6 col-lg-6">
                <% if !item.physical_description.nil? %>
                    <dl>
                        <dt>Description</dt>
                        <dd><%= item.physical_description %></dd>
                    </dl>
                <% end %>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-6">
                <% if !item.publisher.nil? %>
                    <dl>
                        <dt>Publisher</dt>
                        <dd><%= item.publisher %>  <% item.publication_place %> <%= item.record_year %></dd>
                    </dl>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <%= link_to 'marc', data:{params: item.create_params}, :method => :post,  :remote => true, :type => 'button', :class => 'btn btn-default btn-xs padtop' do %>
                    <span class="glyphicon glyphicon-list-alt"></span> MARC
                <% end %>
                <%= link_to main_details_path(id: item.id), :type => 'button', :target => "_blank", :class => 'btn btn-default btn-xs padtop' do %>
                    <span class="glyphicon glyphicon-link"></span> Permalink
                <% end %>
            </div>
        </div>
	</div>
</div>
<div class="row clearfix padbot"></div>
<script>
    load_added_content('<%= item.id %>','<%= item.isbn %>','<%= item.format_type %>')
</script>
