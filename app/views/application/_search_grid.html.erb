<div id="search_grid">
	<% items.each_slice(3) do |slice| %>
		<div class="row">
		 <% slice.each do |item|%>
	   		<div class="col-xs-4">
	    		<img src='https://catalog.tadl.org/opac/extras/ac/jacket/medium/r/<%= item.record_id %>'>
	    		</br>
	        	<%= item.title %>
	        	</br>
				<% item.availability.each do |a| %>
					<p> <%= a  %></p>
				<% end %>
	    	</div>
	    <% end %>	
	    </div>
	<% end %>
</div>	
<% if @more_results == true %>
	<div id="more_results" class="row">
		<center><h1> Load More </h1></center> 
	</div>
<% end %>