<div style="width:100%; border: 1px solid red;">
<%= items %>
</div>
<div id="grid" data-columns>
    <% items.each do |slice| %>
        <% if slice.copies_available[0].to_i > 0 %>
            <div class="panel panel-primary">
        <% else %>
            <div class="panel panel-default">
        <% end %>
            <div class="panel-heading"><%= slice.title %></div>
            <div class="panel-body">
                <img src='https://catalog.tadl.org/opac/extras/ac/jacket/large/r/<%= slice.record_id %>' />
                <h4><%= slice.author %></h4>
            </div>
        </div>
    <% end %>
</div>
<% if @more_results == true %>
    <div id="more_results" class="row">
        <h1 class="text-center">Load More</h1>
    </div>
<% end %>
