<div id="list">
    <% items.each do |slice| %>
        <% if slice.copies_available[0].to_i > 0 %>
            <div class="panel panel-default">
        <% else %>
            <div class="panel panel-warning">
        <% end %>
            <div class="panel-heading">
                <h4>
                    <%= slice.title %>
                    <div class="pull-right">
                        <% if slice.format_type == "Projected medium" %>
                            <span class="glyphicon glyphicon-film"></span>
                        <% elsif slice.format_type == "Musical sound recording" %>
                            <span class="glyphicon glyphicon-cd"></span>
                        <% else %>
                            <%= slice.format_type %>
                        <% end %>
                    </div>
                </h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-3">
                        <img src='https://catalog.tadl.org/opac/extras/ac/jacket/large/r/<%= slice.record_id %>' 
                            onerror="this.src='<%= asset_path("logo-clock-only.png") %>'" />
                    </div>
                    <div class="col-lg-7">
                        <% if !slice.author.nil? %><h4><%= slice.author %></h4><% end %>
                        <% if !slice.abstract.nil? %><p><%= slice.abstract %></p><% end %>
                        <% if !slice.contents.nil? %><p><%= slice.contents %></p><% end %>
                    </div>
                    <div class="col-lg-2">
                        <% if slice.eresource.nil? %><p><button class="btn btn-success">Place hold</button></p><% end %>
                        <% if !slice.call_number.nil? %><p class="label label-default"><%= slice.call_number %></p><% end %>
                        <% if !slice.availability.nil? %>
                            <% slice.availability.each do |a| %>
                                <p class="padtop"><%= a %></p>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div><!-- /.panel-body -->
        </div><!-- /.panel -->
    <% end %>
</div><!-- /#list -->
<% if @more_results == true %>
    <div id="more_results" class="row">
        <h1 class="text-center">Load More</h1>
    </div>
<% end %>
